@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Supplier";
}

<h3>Are you sure you want to delete this supplier?</h3>

<div class="mb-3">
    <strong>Name:</strong> @Model.Supplier.Name<br />
    <strong>Email:</strong> @Model.Supplier.Email<br />
    <strong>Phone:</strong> @Model.Supplier.Phone<br />
    <strong>Contact Person:</strong> @Model.Supplier.ContactPerson
</div>

<form method="post">
    <input type="hidden" asp-for="Supplier.SupplierId" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
